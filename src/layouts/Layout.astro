---
import "../global.css";

import Nav, { link } from "../components/Nav.astro";
import Transition from "../components/Transition.astro";

export interface Props {
  title: string;
  pageOrder?: number;
}

const links: link[] = [
  {
    name: "Home",
    url: "/",
  },
  {
    name: "Work",
    url: "/work/",
  },
  {
    name: "Writing",
    url: "/writing/",
  },
];

const { title, pageOrder } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body data-page-order={pageOrder !== undefined ? pageOrder : -1}>
    <Nav links={links} />
    <Transition
      easing="cubic-bezier(0.8,-0.5,0.9,0.9)"
      in={{ duration: 100, transform: { translate: { x: 5 } } }}
      out={{ duration: 250, transform: { translate: { x: -5 } } }}
    >
      <main>
        <slot />
      </main>
    </Transition>
    <script>
      import "../scripts/rooter";
    </script>
  </body>
</html>

<style>
  html {
    padding: var(--space-3xs);
  }
  body {
    border-radius: var(--space-3xs);
    border: 2px hsl(var(--col-blk) / 0.05) solid;
    box-shadow: 0 0 16px 0 inset hsl(var(--col-prim) / 0.2);
    display: grid;
  }
  :global(m-nav) {
    grid-row: 1;
    grid-column: 1;

    z-index: 1;
  }
  main {
    padding: var(--space-3xs);
    padding-top: var(--space-xl);

    height: 100%;

    grid-row: 1/3;
    grid-column: 1/3;

    overflow-y: scroll;

    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-template-rows: repeat(7, 1fr);
  }
  main > :global(*) {
    grid-column: 1/-1;
  }
</style>
