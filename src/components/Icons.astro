---
interface Props {
  width: number;
  height: number;
  type: "home" | "work" | "writing";
}
const { width, height, type } = Astro.props as Props;
---

<svg
  width={width}
  height={height}
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 28 28"
  fill="none"
  stroke="currentColor"
  stroke-width="3"
  stroke-linecap="round"
  stroke-linejoin="round"
>
  <g transform="scale(0.75)" transform-origin="center">
    {
      type == "home" ? (
        <g>
          <rect width="100%" height="100%" />
        </g>
      ) : type == "work" ? (
        <g>
          <path d="M0,28 l28,0 l-14,-28 z" />
        </g>
      ) : type == "writing" ? (
        <g>
          <circle cx="14" cy="14" r="14" />
        </g>
      ) : (
        ""
      )
    }
  </g>
</svg>

<style>
  svg {
    overflow: visible;
    pointer-events: none;
  }
</style>
