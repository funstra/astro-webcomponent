---
interface Props {
  width: number;
  height: number;
  type: "home" | "work" | "writing" | string;
}
const { width, height, type } = Astro.props as Props;
---

<svg
  width={width}
  height={height}
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 28 28"
  fill="none"
  stroke="currentColor"
  stroke-linecap="round"
  stroke-linejoin="round"
>
  <g
    transform="scale(0.5)"
    vector-effect="non-scaling-stroke"
    transform-origin="center"
  >
    {
      type == "home" ? (
        <g>
          <rect width="100%" height="100%" vector-effect="non-scaling-stroke" />
        </g>
      ) : type == "work" ? (
        <g transform="translate(0 -1)">
          <path d="M0,28 l28,0 l-14,-28 z" vector-effect="non-scaling-stroke" />
        </g>
      ) : type == "writing" ? (
        <g>
          <circle cx="14" cy="14" r="14" vector-effect="non-scaling-stroke" />
        </g>
      ) : (
        ""
      )
    }
  </g>
</svg>

<style>
  svg {
    overflow: visible;
    pointer-events: none;
  }
</style>
